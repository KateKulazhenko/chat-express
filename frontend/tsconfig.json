{
  "compilerOptions": {
    "baseUrl": "./src",
      "sourceMap": true,
      "module": "es2015",
      "target": "es2015",
      "jsx": "react",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "noLib": false,
      "esModuleInterop": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true
  },
  "compileOnSave": false,
  "include": [
      "./src/**/*"
  ]
}
